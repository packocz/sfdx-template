{
	"name": "salesforce-app",
	"private": true,
	"version": "1.0.0",
	"description": "ÄŒSAS Financial Service Cloud Application",
	"scripts": {
		"lint": "eslint **/{aura,lwc}/**",
		"test": "npm run test:unit",
		"test:unit": "sfdx-lwc-jest",
		"test:unit:watch": "sfdx-lwc-jest --watch",
		"test:unit:debug": "sfdx-lwc-jest --debug",
		"test:unit:coverage": "sfdx-lwc-jest --coverage -- --passWithNoTests",
		"prettier": "prettier --write \"src/**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
		"prettier:check": "prettier --check \"src/**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
		"postinstall": "husky install",
		"precommit": "lint-staged",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@babel/traverse": ">=7.23.2",
		"@lwc/eslint-plugin-lwc": "^1.1.2",
		"@prettier/plugin-xml": "^2.0.1",
		"@salesforce/eslint-config-lwc": "^3.2.3",
		"@salesforce/eslint-plugin-aura": "^2.0.0",
		"@salesforce/eslint-plugin-lightning": "^1.0.0",
		"@salesforce/sfdx-lwc-jest": "^1.4.0",
		"babel-eslint": "^10.1.0",
		"eslint": "^7.0.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-jest": "^26.1.2",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"postcss": ">=8.4.31",
		"prettier": ">=3.1.1",
		"prettier-plugin-apex": ">=2.1.0",
		"semver": ">=7.5.2",
		"tough-cookie": ">=4.1.3",
		"word-wrap": ">=1.2.4"
	},
	"lint-staged": {
		"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
			"prettier --write"
		],
		"**/{aura,lwc}/**": [
			"eslint"
		]
	},
	"dependencies": {
		"-": "^0.0.1",
		"g": "^2.0.1"
	}
}
